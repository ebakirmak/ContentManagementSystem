@model AdminYonetim.Models.DataViewModel.MenuViewModel

@{

    ViewBag.Title = "Menu Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/Scripts/Menu.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Adi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Adi, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.Adi, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.KonumTipi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.KonumTipi, new[] { new SelectListItem { Text = "ANAMENU" }, new SelectListItem { Text = "ALTMENU" }, new SelectListItem { Text = "SONMENU" } }, "KONUM SEÇİNİZ", htmlAttributes: new { id = "KonumTipi", @class = "control-label col-md-10" })
                @Html.ValidationMessageFor(model => model.KonumTipi, "", new { @class = "text-danger" })
            </div>

        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.KonumID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.KonumID, new[] { new SelectListItem { Text = "", Value = "" } }, "Konum Seçiniz", htmlAttributes: new { id = "KonumID", @class = "control-label col-md-10" })
                @Html.ValidationMessageFor(model => model.KonumID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<hr />
<div class="divEkle">
    <a href="@Url.Action("Index", "Menu")"><i class="fa fa-arrow-circle-left fa-2x"></i><div style="font-size:18px;" id="idEkle">Listeye Dön</div></a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
