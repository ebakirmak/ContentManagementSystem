<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <!-- BOOTSTRAP STYLES-->

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/custom.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
 
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
  
  
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-default navbar-cls-top " role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("Main","Admin")">Yönetim Paneli</a> 
                
            </div>
            <div style="color: white;
padding: 15px 50px 5px 50px;
float: right;

font-size: 16px;">Sisteme Son Giriş : 19.02.2016 &nbsp;<a href="#" class="btn btn-danger square-btn-adjust"><i class="fa fa-sign-out fa-x"></i> &nbsp; ÇIKIŞ</a></div>

        </nav>
        <!-- /. NAV TOP  -->
        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">
                    <li class="text-center">
                        
                        <img src="~/img/find_user.png" class="user-image img-responsive" />
                        
                    </li>
                    <li>
              
                        <a id="AnaSayfa" href="@Url.Action("Main","Admin")" class="active-menu"><i class="fa fa-home fa-3x"></i>Ana Sayfa</a>
                    </li>
                    <li>
                      
                        <a href="@Url.Action("Index","Menu")"><i class="fa fa-sitemap fa-3x"></i>Menü Yönetimi</a>
                    </li>

                    <li>
                        
                        <a href="@Url.Action("Index","Page")"><i class="fa fa-edit fa-3x"></i>Sayfa Yönetimi</a>
                    </li>

                    <li>
                        <a href="UrunYonetim.html"><i class="fa fa-flask fa-3x"></i> Ürün Yönetimi</a>
                    </li>
                    <li>
                       <a href="@Url.Action("Index","Slider")"><i class="fa fa-desktop fa-3x"></i>Slider Yönetimi</a>
                    </li>
                    <li>
                        <a href="HaberYonetim.html"><i class="fa fa-table fa-3x"></i> Haber Yönetimi</a>
                    </li>
                    <li>
                        <a href="GaleriYonetim.html"><i class="fa fa-picture-o fa-3x"></i> Galeri Yönetimi</a>
                    </li>
                    </li>
                </ul>

            </div>

        </nav>
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper">
            <div id="page-inner">
                <div class="row">
                    <div class="col-md-12">
                        <h2 style="color:black;margin-left:5px">
                            <i class="fa fa-cogs fa-2x"></i> <b>
                                Bones Bilişim Web Sitesi Kontrol Paneli
                            </b>
                            
                        </h2>

                    </div>
                </div>
                <!-- /. ROW  -->
                <hr />
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="panel back-dash">
                            <i class="fa @ViewBag.Icon fa-3x"></i><strong> &nbsp; @ViewBag.Menu > @ViewBag.Islem</strong>
                            <p class="text-muted">
                                @RenderBody()
                            </p>
                        </div>

                    </div>


                </div>
                <hr />
                <div class="row">
                    <div class="col-md-3 col-sm-6 col-xs-6">
                        <div class="panel panel-back noti-box">
                            <span class="icon-box bg-color-red set-icon">
                                <i class="fa fa-envelope-o"></i>
                            </span>

                            <div class="text-box">
                                <p class="main-text">Maile Git</p>
                                <p class="text-muted">E-Posta Servisi</p>
                            </div>

                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 col-xs-6">
                        <div class="panel panel-back noti-box">
                            <span class="icon-box bg-color-green set-i	con">
                                <i class="fa fa-bars"></i>
                            </span>
                            <div class="text-box">
                                <p class="main-text">Duyuru</p>
                                <p class="text-muted">Remaining</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 col-xs-6">
                        <div class="panel panel-back noti-box">
                            <span class="icon-box bg-color-blue set-icon">
                                <i class="fa fa-bell-o"></i>
                            </span>
                            <div class="text-box">
                                <p class="main-text">240 New</p>
                                <p class="text-muted">Notifications</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 col-xs-6">
                        <div class="panel panel-back noti-box">
                            <span class="icon-box bg-color-brown set-icon">
                                <i class="fa fa-rocket"></i>
                            </span>

                            <div class="text-box">
                          
                                <a href="@Url.Action("Index","Portal")" class="main-text" target="_blank">Siteye Git</a>
                                <p class="text-muted">Önizleme</p>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- /. ROW  -->
                <hr />
             
                <!-- /. ROW  -->
                <!-- /. ROW  -->
                <!-- /. ROW  -->
            </div>
            <!-- /. PAGE INNER  -->
        </div>
        <!-- /. PAGE WRAPPER  -->
    </div>
    <!-- /. WRAPPER  -->
    <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
    <!-- JQUERY SCRIPTS -->
    <link href="~/js/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/js/morris/morris-0.4.3.min.css" rel="stylesheet" />
    <script src="~/js/dataTables/dataTables.bootstrap.js"></script>
    <script src="~/js/dataTables/jquery.dataTables.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/morris/morris.js"></script>
    <script src="~/js/morris/raphael-2.1.0.min.js"></script>
    <script src="~/js/custom.js"></script>
    <script src="~/js/jquery-1.10.2.js"></script>
    <script src="~/js/jquery.metisMenu.js"></script>



    @RenderSection("scripts", required: false)
</body>
</html>
