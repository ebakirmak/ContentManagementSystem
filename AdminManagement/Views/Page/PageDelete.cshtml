@model AdminYonetim.Models.DataViewModel.PageViewModel

@{
    ViewBag.Title = "Sayfa Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/Scripts/Page.js"></script>
<h2>Sayfa Sil</h2>

<h3>Bu sayfayı silmek istediğinizden emin misiniz?</h3>
<div>
    <hr />
    <form method="post">
        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.ID)

            </dt>

            <dd>
                @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Baslik)

            </dt>

            <dd>
              @Html.EditorFor(model => model.Baslik, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Icerik)
            </dt>

            <dd>
               @Html.EditorFor(model => model.Icerik, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.MenuID)
            </dt>

            <dd>
                
               @Html.EditorFor(model => model.MenuID, new { htmlAttributes = new { @class = "form-control",@id="MenuAdi", @readonly = "readonly" } })
                
            </dd>

        </dl>


            <div class="form-actions no-color">
                <input type="submit" value="Sil" class="btn btn-default" /> |
                @Html.ActionLink("Listeye Dön", "Index")
            </div>
        
    </form>

</div>
